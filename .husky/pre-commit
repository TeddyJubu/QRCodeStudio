#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit hooks..."

# Run secret detection first
echo "ğŸ” Running secret detection..."
node scripts/secret-detection.js

# Run lint-staged if no secret issues
if [ $? -eq 0 ]; then
  echo "ğŸ“ Running lint-staged..."
  npx lint-staged
fi

# Run type check if no lint-staged errors
if [ $? -eq 0 ]; then
  echo "ğŸ” Running TypeScript type check..."
  npm run check
fi

# Run tests if no type errors
if [ $? -eq 0 ]; then
  echo "ğŸ§ª Running tests..."
  npm run test:unit -- --run
fi

echo "âœ… Pre-commit hooks completed!"